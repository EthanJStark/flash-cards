extends ../layout

block content
  each deck, index in decks
    if( index % 3 === 0 && index !== 0 )
      .row

    .col-md-4
        .panel.panel-default.deck(data-id=deck.id)
          .panel-heading
            h3.panel-title= deck.title
          .panel-body
            //-Show card count here
            
          .panel-footer
            .edit
              .toggle-wrapper
                a.btn.btn-default.btn-group-justified(href=`/decks/edit/${deck.id}`) Edit Deck
                  i.glyphicon.glyphicon-pencil
                form.btn.btn-default.btn-group-justified(name='delete', action='/decks/delete/'+deck.id, method='get')
                  input(type='submit' value='Delete Deck' style="border: none; background: none; padding: 0;")
                  i.glyphicon.glyphicon-ban-circle


    if( index % 3 === 0 && index !== 0 )
      .row


