extends ../layout

block content
  .row
    .col-lg-12
      form(action='/deck/new', method='post')
        .input-group
          input.form-control(type='text', name='title', placeholder='Enter New Deck Name')
          span.input-group-btn
            button.btn.btn-default(type='submit') Create!

      ul
        each val, index in cards
          li= cards[index].id + ' ' + cards[index].front
